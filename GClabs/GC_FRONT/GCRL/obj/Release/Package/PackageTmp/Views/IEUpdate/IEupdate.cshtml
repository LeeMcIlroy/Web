    <ui-view autoscroll="true">
        <style>
            html {
                height: 100% !important;
            }

            body {
                overflow: hidden;
                margin: 0;
                display: table;
                width: 100%;
                height: 90%;
            }

            .error_wrap {
                display: table-cell;
                font-family: NanumGothic, sans-serif;
                text-align: center;
                vertical-align: middle;
            }

            .error_svg {
                line-height: 0;
            }

            .error_h1 {
                margin: 28px 0 0;
