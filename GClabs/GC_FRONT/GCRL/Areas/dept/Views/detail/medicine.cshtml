@section script {
    <script type="text/javascript" src="~/assets/lib/jquery-2.2.4.min.js"></script>
    <!-- Live List Layout -->
    <script type="text/javascript" src="~/assets/lib/masonry.pkgd.min.js"></script>
    <script type="text/javascript" src="~/assets/lib/slick.min.js"></script>
    <script type="text/javascript" src="~/assets/js/app.js"></script>

    <script>

        $('a', '.equipment-buttons').click(function () {
            $('a', '.equipment-buttons').removeClass('active');
            $(this).addClass('active');

            let code = $(this).data('code');

            showEquipment(0, code);
        });

        $('a', '.equipment-status .btn-group').click(function () {

            let idx = $(this).data('idx');
            let code = $(this).data('code');

            if (idx == undefined || idx == '0')
                return false;

            showEquipment(idx, code);
        });

        function showEquipment(idx, code) {

            let url = '@(Url.Action("equipment"))?idx=' + idx + '&code=' + code + '&pcd=1';

            $.getJSON(url, function (data) {

                $('img', '.equipment-status .contents .thumbnail').attr('src', '@Functions.StaticFilesLocation.ImageUrl' + data.IMAGE_NAME);

                $('.name', '.equipment-status .contents .info').text(data.TITLE);
                $('.desc', '.equipment-status .contents .info').html('용도 : ' + data.PURPOSE);

                $('.prev', '.equipment-status .btn-group').data({ 'idx': data.PREV_IDX, 'code': code });
                $('.next', '.equipment-status .btn-group').data({ 'idx': data.NEXT_IDX, 'code': code });

                if (data.PREV_IDX == 0)
                    $('.prev', '.equipment-status .btn-group').addClass('first');
                else
                    $('.prev', '.equipment-status .btn-group').removeClass('first');

                if (data.NEXT_IDX == 0)
                    $('.next', '.equipment-status .btn-group').addClass('last');
                else
                    $('.next', '.equipment-status .btn-group').removeClass('last');
            });

        }

        $(document).ready(function () {
            showEquipment(0, "");
        });
    </script>
}

