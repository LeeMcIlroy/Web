<?xml version="1.0" encoding="utf-8"?>
<!--
  For more information on how to configure your ASP.NET application, please visit
  https://go.microsoft.com/fwlink/?LinkId=301880
  -->
<configuration>

    <configSections>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="GCMaster.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
        </sectionGroup>
    
    </configSections>

    <system.webServer>
      <security>
        <requestFiltering>
          <!-- 
            'requestLimits' 요소의 'maxAllowedContentLength' 속성은 IIS에서 제한하는 요청 데이터 크기이다.
            DEXTUpload.NET Professional에서 업로드 용량 제한을 설정했더라도 IIS에서 사용하는 기본 용량 제한을 넘을 수 없다.
          -->
          <requestLimits maxAllowedContentLength="209715200"/>
        </requestFiltering>
      </security>
   
    </system.webServer>
    <connectionStrings>
        <!-- 기본 데이타베이스 연결문자열  -->
        <add name="DefaultConnection" connectionString="Data Source=121.140.143.36,6816;Initial Catalog=GCRL;uid=ypitdb;password=ypitdb##1234;" />
    </connectionStrings>

  
    <appSettings>
        <add key="webpages:Version" value="3.0.0.0" />
        <add key="webpages:Enabled" value="false" />
        <add key="ClientValidationEnabled" value="true" />
    </appSettings>


    <system.web>
        <compilation debug="true" targetFramework="4.6.2" />
        <httpRuntime targetFramework="4.6.2" executionTimeout="18000" maxRequestLength="2048000" />
        <authentication mode="Forms">
            <!-- loginUrl : 로그인폼위치, timeout : 인증만료시간(mini) -->
            <forms loginUrl="~/login/login" timeout="480"></forms>
        </authentication>
    </system.web>

  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" />
        <bindingRedirect oldVersion="0.0.0.0-12.0.0.0" newVersion="12.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Helpers" publicKeyToken="31bf3856ad364e35" />
        <bindingRedirect oldVersion="1.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.WebPages" publicKeyToken="31bf3856ad364e35" />
        <bindingRedirect oldVersion="0.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Mvc" publicKeyToken="31bf3856ad364e35" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.7.0" newVersion="5.2.7.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>


  <applicationSettings>
    <GCMaster.Properties.Settings>
      <!--
        이미지 저장 디렉토리명
        저장 StaticFilesRootPath + ImageFolderName, ie: D:\Webservices\GCRL\BO\BoardImages\
        표시 StaticFilesRootUrl + ImageFolderName, ie: http://121.140.143.35:4060/BoardImages/
      -->
      <setting name="ImageFolderName" serializeAs="String">
        <value>BoardImages</value>
      </setting>
      <!--
        파일 저장 디렉토리명
        저장 StaticFilesRootPath + FileFolderName, ie: D:\Webservices\GCRL\BO\BoardFiles\
        표시 StaticFilesRootUrl + FileFolderName, ie: http://121.140.143.35:4060/BoardFiles/
      -->
      <setting name="FileFolderName" serializeAs="String">
        <value>BoardFiles</value>
      </setting>
      <!--
        이미지 또는 파일을 표시하기 위한 URL
      -->
      <setting name="StaticFilesRootUrl" serializeAs="String">
        <value>http://192.168.1.5:4060/</value>
      </setting>
      <!--
        메일발송 호스트
        ie: smtp.gcrl.com
      -->
      <setting name="SmtpHost" serializeAs="String">
        <value>shield.greencross.com</value>
      </setting>
      <!--
        메일발송 포트
        디폴트 25
        SSL/TLS 사용시 465(또는 GMAIL의 경우는 587)
      -->
      <setting name="SmtpPort" serializeAs="String">
        <value>25</value>
      </setting>
      <!--
        메일발송 기본주소(송신자)
      -->
      <setting name="SmtpSenderEmail" serializeAs="String">
        <value>noreply@gclabs.co.kr</value>
      </setting>
      <!--
        이미지 또는 파일 저장 디렉토리의 상위 경로 (절대경로 ie: D:\Webservices\GCRL\BO\
      -->
      <setting name="StaticFilesRootPath" serializeAs="String">
        <value>D:\WAS\GCRLMVC\gcmaster\</value>
      </setting>
      <!--
        메일발송 SSL/TLS 사용여부
      -->
      <setting name="SmtpSSL" serializeAs="String">
        <value>False</value>
      </setting>
    </GCMaster.Properties.Settings>
  </applicationSettings>
</configuration>