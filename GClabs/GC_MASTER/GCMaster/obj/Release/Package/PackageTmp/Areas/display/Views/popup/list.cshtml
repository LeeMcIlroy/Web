@model PagedList.IPagedList<GCMaster.Areas.display.Models.popupModel>
@using GCMaster.Modules;

@section Styles {
    <style>
    </style>
}

@section Scripts {
    <script>
        function onSearch() {
        }

        function onReset() {
        }

        $(document).ready(function () {
        });
    </script>
}

<div class="page-title">팝업관리</div>

<div class="list-box">
    <!--search info-->
    <div class="search-infomation">
        <div class="search-count">
            총 <strong>5</strong>건
        </div>
        <div class="paging-select">
            <div>
                <a href="@(Url.Action("view", new { id = 0 }))?@(Request.QueryString.ToString())" class="sh-btn">등록</a>
            </div>
        </div>
    </div>
    <!--// search info-->
    <!-- table -->
    <div class="list-table-box">
        <table class="normal-list-table">
            <colgroup>
                <col style="width:5%;" />
                @*<col style="width:10%;" />*@
                <col style="width:10%;" />
                <col />
                <col style="width:20%;" />
                <col style="width:5%;" />
                <col style="width:8%;" />
                <col style="width:8%;" />
                <col style="width:10%;" />
                <col style="width:10%;" />
            </colgroup>
            <thead>
                <tr>
                    <th>번호</th>
                    @*<th>디바이스</th>*@
                    <th>이미지</th>
                    <th>제목</th>
                    <th>노출기간</th>
                    <th>노출여부</th>
                    <th>등록자</th>
                    <th>등록자아이디</th>
                    <th>등록일자</th>
                    <th>수정일자</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ROW_NUM</td>
                        @*<td>@item.DVI_TYP_NM</td>*@
                        <td><div class="upload-img-box mr0"><img src="@Functions.GetImageUrl(item.IMG_NM)" width="84" height="54"></div></td>
                        <td class="txt-c"><a href="@(Url.Action("view", new {id = item.IDX}))?@(Request.QueryString.ToString())" class="underline">@item.TITLE</a></td>
                        <td>@item.VIEW_TIME</td>
                        <td>@item.VIEW_YN</td>
                        <td>@item.INS_USR_NM</td>
                        <td>@item.INS_USER </td>
                        <td>@item.INS_DATE_MIN</td>
                        <td>@item.UPD_DATE_MIN</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!--// table -->

    <!-- paging -->
    <div class="pg-btn">
        <div class="paging_wrap">
            <div class="paging">
                @Html.PagingBoardPager(Model, page => Url.Action("list", new { page } ))
            </div>
        </div>
    </div>
    <!--// paging -->

</div>